<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/settingsbackground"
    tools:context=".MediatekaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonBack"
            style="@style/backbutton"
            android:layout_width="@dimen/button_w"
            android:layout_height="@dimen/button_h"
            android:layout_marginEnd="24dp"
            android:contentDescription="@string/back_button_description"
            android:gravity="start|center_vertical"
            app:icon="@drawable/back_arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:padding="6dp"
            android:text="@string/mediateka"
            android:textAppearance="@style/main" />

    </LinearLayout>

</FrameLayout>
