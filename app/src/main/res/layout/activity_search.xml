<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/settingsbackground"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonBackSearch"
            style="@style/backbutton"
            app:icon="@drawable/back_arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity=""
            android:padding="6dp"
            android:text="@string/search"
            android:textAppearance="@style/main" />

    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/edit_query"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/search_icon_edit_text"
            android:drawablePadding="10dp"
            android:hint="@string/search"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:lines="1"
            android:paddingStart="12dp"
            android:saveEnabled="false"
            android:singleLine="true"
            android:textColorHint="@color/yandex_gray" />
        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:padding="8dp"
            android:src="@drawable/search_close_ic"
            app:iconTint="@color/black"
            android:visibility="invisible"/>
</FrameLayout>


</LinearLayout>