<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/settingsbackground"
    tools:context=".SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonBackSearch"
            style="@style/backbutton"
            android:layout_width="@dimen/button_w"
            android:layout_height="@dimen/button_h"
            android:contentDescription="@string/back_button_description"
            android:gravity="start|center_vertical"
            app:icon="@drawable/back_arrow" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:padding="6dp"
            android:text="@string/search"
            android:textAppearance="@style/main" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingTop="@dimen/mid_padding"
        android:paddingBottom="@dimen/mid_padding">

        <EditText
            android:id="@+id/edit_query"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/edit_text_background"
            android:drawableStart="@drawable/search_icon_edit_text"
            android:drawablePadding="10dp"
            android:hint="@string/search"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:lines="1"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:saveEnabled="false"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/yandex_gray" />

        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:contentDescription="@android:string/cancel"
            android:padding="@dimen/mid_padding"
            android:src="@drawable/search_close_ic"
            android:visibility="invisible"
            app:iconTint="@color/black" />
    </FrameLayout>


</LinearLayout>