<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingStart="13dp"
    android:paddingTop="@dimen/track_padding"
    android:paddingEnd="12dp">

    <ImageView
        android:id="@+id/ic_disc_cover"
        android:layout_gravity="center"
        android:layout_width="@dimen/cover_image_w"
        android:layout_height="@dimen/cover_image_h"
        android:scaleType="fitCenter" />
    <LinearLayout
        android:layout_width="0dp"
        android:paddingStart="@dimen/mid_padding"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/track_name_text_view"
            style="@style/origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            tools:text="P.U.R.G.E.N"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/artist_name_text_view"
                style="@style/track_artist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                tools:text="Jopa bobra"
                />
            <ImageView
                android:id="@+id/track_dot_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:src="@drawable/ic_track_dot"
                />
            <TextView
                android:id="@+id/track_lenght_text_view"
                style="@style/track_artist"
                android:layout_gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="5:55"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/ic_track_back_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/arrow_forward"
        style="@style/track_arrow_ic"
         />
</LinearLayout>