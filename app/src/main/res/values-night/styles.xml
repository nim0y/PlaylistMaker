<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="origin">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="track_artist">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="audio_player_14">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="search_queue">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="error_text">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_error</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="main">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="origin.settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textAppearance">@style/origin</item>
    </style>

    <style name="mainbuttonstyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textAppearance">@style/main</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="settingsbuttonstyle">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">@color/background_main_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="track_arrow_ic">
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="tint">@color/white</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="backbutton" parent="settingsbuttonstyle">
        <item name="iconTint">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">24dp</item>
    </style>

    <style name="toolbar" parent="settingsbuttonstyle">
        <item name="titleMarginTop">10dp</item>
        <item name="titleTextAppearance">@style/main</item>
    </style>

    <style name="toolbaraudio" parent="settingsbuttonstyle">
        <item name="contentInsetStartWithNavigation">64dp</item>
        <item name="titleMarginTop">10dp</item>
        <item name="navigationIcon">@drawable/back_arrow_dark_mode</item>
        <item name="titleTextAppearance">@style/main</item>
    </style>

    <style name="refresh_button_style">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">@string/search_refresh_button</item>
        <item name="android:textSize">@dimen/text_size_button_refresh</item>
    </style>

    <style name="switchstyle">
        <item name="android:text">@string/dark_theme_switch</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textAppearance">@style/origin</item>
        <item name="trackTint">@color/yp_blue_light</item>
        <item name="thumbTint">@color/background_main</item>
    </style>

    <style name="mainbackground">
        <item name="android:background">@color/background_main_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/border_padding</item>
    </style>

    <style name="settingsbackground">
        <item name="android:background">@color/background_main_dark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="playerstyle">
        <item name="android:background">@color/background_main_dark</item>
    </style>

    <style name="nothing_found_style">

        <item name="android:src">@drawable/dark_mode_nothing_found_error</item>
    </style>

    <style name="no_connection_style">
        <item name="android:src">@drawable/dark_mode_no_connection_error</item>
    </style>

    <style name="bottomViewStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="tabStyle">
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="tabSelectedTextColor">@color/background_main</item>
        <item name="android:background">?attr/background</item>
    </style>

    <style name="bottomNavStyle">
        <item name="backgroundTint">@color/background_main_dark</item>
        <item name="itemIconTint">@drawable/bottom_nav_color_state_dark</item>
        <item name="itemTextColor">@drawable/bottom_nav_color_state_dark</item>
    </style>

</resources>