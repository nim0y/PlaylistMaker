<resources>
    <!-- dark application theme. -->
    <style name="PlaylistMakerTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/background_main_dark</item>
        <item name="colorPrimaryDark">@color/background_main_dark</item>
        <item name="colorAccent">@color/background_main_dark</item>
        <item name="background">@color/background_main_dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--     Our app's background changes to black when dark mode is activated -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/black</item>
        <!--     text and button color change to white to contrast with the app's background-->
    </style>
</resources>