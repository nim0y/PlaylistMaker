<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="origin">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="track_artist">
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/yandex_gray</item>
    </style>

    <style name="audio_player_14">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="search_queue">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="error_text">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_error</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="title_current_playlist">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_bold</item>
    </style>

    <style name="description_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="main">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/background_main_dark</item>
    </style>

    <style name="origin.settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textAppearance">@style/origin</item>
    </style>

    <style name="mainbuttonstyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">8dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textAppearance">@style/main</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="settingsbuttonstyle">
        <item name="android:stateListAnimator">@null</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/yandex_gray</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="track_arrow_ic">
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="tint">@color/yandex_gray</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="backbutton" parent="settingsbuttonstyle">
        <item name="android:stateListAnimator">@null</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="toolbar" parent="settingsbuttonstyle">
        <item name="titleMarginTop">10dp</item>
        <item name="titleTextAppearance">@style/main</item>
    </style>

    <style name="toolbaraudio" parent="settingsbuttonstyle">
        <item name="contentInsetStartWithNavigation">64dp</item>
        <item name="titleMarginTop">10dp</item>
        <item name="navigationIcon">@drawable/back_arrow</item>
        <item name="titleTextAppearance">@style/main</item>
    </style>

    <style name="toolbar_current_playlist" parent="settingsbuttonstyle">
        <item name="contentInsetStartWithNavigation">64dp</item>
        <item name="titleMarginTop">10dp</item>
        <item name="navigationIcon">@drawable/ic_back_arrow</item>
        <item name="titleTextAppearance">@style/main</item>
    </style>

    <style name="refresh_button_style">
        <item name="backgroundTint">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:text">@string/search_refresh_button</item>
        <item name="android:textSize">@dimen/text_size_button_refresh</item>
    </style>

    <style name="switchstyle">
        <item name="android:text">@string/dark_theme_switch</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textAppearance">@style/origin</item>
        <item name="trackTint">@color/yandex_gray</item>
        <item name="thumbTint">@color/yandex_light_gray</item>
    </style>


    <style name="settingsbackground">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="playerstyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="nothing_found_style">
        <item name="android:src">@drawable/light_mode_nothing_found_error</item>

    </style>

    <style name="no_connection_style">
        <item name="android:src">@drawable/light_mode_no_connection_error</item>
    </style>

    <style name="test">
        <item name="textFillColor">@color/purple_200</item>
    </style>

    <style name="bottomViewStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="tabStyle">
        <item name="tabTextColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="bottomNavStyle">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="itemIconTint">@drawable/bottom_nav_color_state</item>
    </style>

    <style name="textLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@drawable/box_stroke</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bottom_sheet_button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">54dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="layout_goneMarginTop">24dp</item>
        <item name="android:text">@string/new_playlist</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="bottom_sheet_background">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="bottom_sheet_line_style">
        <item name="android:backgroundTint">@color/yandex_light_gray</item>
    </style>

    <style name="new_playlist_image_shape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="new_playlist_background">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="custom_alert_dialog_theme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/white</item>
        <item name="materialAlertDialogTitleTextStyle">@style/custom_title_text_style</item>
        <item name="materialAlertDialogBodyTextStyle">@style/custom_dialog_body_text_style</item>
        <item name="buttonBarPositiveButtonStyle">@style/pos_button_style</item>
        <item name="buttonBarNegativeButtonStyle">@style/neg_button_style</item>
    </style>

    <style name="custom_title_text_style" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="custom_dialog_body_text_style" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="pos_button_style" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/background_main</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="neg_button_style" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/background_main</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

</resources>